{
  "extends": "./node_modules/@salesforce/dev-config/tsconfig",
  "compilerOptions": {
    "declaration": true,
    "outDir": "./lib",
    "importHelpers": true,
    "skipLibCheck": true,
    "rootDir": "./src",
    "baseUrl": "./src",
    "noUnusedLocals": false,
    "paths": {
      "@src/*": ["*"],
      "@lib/*": ["lib/*"]
    }
  },
  "include": [
    "./src/**/*"
  ]
}
